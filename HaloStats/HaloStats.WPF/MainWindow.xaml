<Window x:Class="HaloStats.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HaloStats.WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="TxtGamertag" HorizontalAlignment="Left" Margin="20,21,0,359" TextWrapping="Wrap" Width="120" AutomationProperties.HelpText="Enter Gamertag..." TextChanged="TxtGamertag_TextChanged"/>
        <Button x:Name="BtnLoadGamertag" Content="Load" HorizontalAlignment="Left" Margin="157,21,0,0" VerticalAlignment="Top" Width="75" Height="23" IsEnabled="False" Click="BtnLoadGamertag_Click"/>
        <Border x:Name="BorderSpartanPanel" BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="335" Margin="20,66,0,0" VerticalAlignment="Top" Width="120">
            <StackPanel Margin="0.2,0.2,0.2,0.4">
                <Image x:Name="ImgEmblem" Height="80" Margin="0,0,0.4,0"/>
                <Image x:Name="ImgSpartan" Height="255" Margin="0,0,0.4,0"/>
            </StackPanel>
        </Border>

    </Grid>
</Window>
